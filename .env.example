# MongoDB
MONGODB_URI=mongodb://localhost:27017/trustwatch
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trustwatch

# Redis (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too

# API Keys
FIRECRAWL_API_KEY=your-firecrawl-api-key
REDUCTO_API_KEY=your-reducto-api-key
RESEND_API_KEY=your-resend-api-key

# App Configuration
APP_BASE_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Demo Mode
DEMO_MODE=true

# Scheduler Configuration
CRAWL_SCHEDULE=0 */6 * * *  # Every 6 hours (cron format)

# Email Configuration
ALERT_FROM_EMAIL=alerts@trustwatch.com
ALERT_TO_EMAIL=your-email@example.com

# Node Environment
NODE_ENV=development
